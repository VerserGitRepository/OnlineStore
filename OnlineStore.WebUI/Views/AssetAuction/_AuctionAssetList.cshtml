@model IEnumerable<OnlineStore.WebUI.Models.AssetListModel>
@using System.Linq;
<div class="container" style="padding-top:2px 0 0 0; max-width:670px">
    @using (Html.BeginForm("ExportAuctionResult", "AssetAuction",new { BundleId =7 }, FormMethod.Post, null))
    {
        <div class="row">
            <button type="submit" class="btn btn-default btn-sm" style="padding-left:10px;margin:12px 16px 10px 16px; margin-bottom:10px; background-color:lightgray">
                <span class="glyphicon glyphicon-export black"></span> Export
            </button>
        </div>
    }
    <table class="table table-bordered table-responsive table-hover" id="AssetsTable" style="font-size:smaller;border:none">
        <thead style="background-color:#959ca1;color:white;">
            <tr>
                <th style="text-align:center; padding:13px">SSN</th>
                <th style="text-align:center; padding:13px">MAKE</th>
                <th style="text-align:center; padding:13px">MODEL</th>
                <th style="text-align:center; padding:13px">SERIAL</th>
                <th style="text-align:center; padding:13px">MEMORY</th>
                <th style="text-align:center; padding:13px">COLOUR</th>
                <th style="text-align:center; padding:13px">GRADE</th>
                <th style="text-align:center; padding:13px">ITEMTYPE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="text-align:center">
                    <td>@item.SSN</td>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>@item.Serial </td>
                    <td>@item.Memory</td>
                    <td>@item.Colour</td>
                    <td>@item.Grade</td>
                    <td>@item.ItemTypeName</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <script>
        $(document).ready(function () {
            $('#AssetsTable').DataTable();
            $('.dataTables_filter').addClass('pull-right');
            $('[data-toggle="popover"]').popover({
                container: 'body'
            });
        });
    </script>
