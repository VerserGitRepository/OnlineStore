@model IEnumerable<OnlineStore.WebUI.Models.AssetListModel>
@using System.Linq;
<div class="container-fluid">
    @using (Html.BeginForm("ExportAuctionResult", "AssetAuction",new { BundleId =7 }, FormMethod.Post, null))
    {
        <div class="row">
            <button type="submit" class="btn btn-default btn-sm" style="padding-left:10px; margin-bottom:10px; background-color:lightgray">
                <span class="glyphicon glyphicon-export black"></span> Export
            </button>
        </div>
    }
    <div class="table-responsive" style="width:100%; overflow-x:scroll">
        <table class="table table-striped table-hover" id="AssetsTable" style="font-size:smaller;border:none;">
            <thead style="background-color:#959ca1;color:white;">
                <tr>
                    <th style="text-align:center; ">SSN</th>
                    <th style="text-align:center; ">MAKE</th>
                    <th style="text-align:center; ">MODEL</th>
                    <th style="text-align:center; ">SERIAL</th>
                    <th style="text-align:center; ">MEMORY</th>
                    <th style="text-align:center; ">COLOUR</th>
                    <th style="text-align:center; ">GRADE</th>
                    <th style="text-align:center; ">ITEMTYPE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center">
                        <td>@item.SSN</td>
                        <td>@item.Make</td>
                        <td>@item.Model</td>
                        <td>@item.Serial </td>
                        <td>@item.Memory</td>
                        <td>@item.Colour</td>
                        <td>@item.Grade</td>
                        <td>@item.ItemTypeName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
    <script>
        $(document).ready(function () {
            $('#AssetsTable').DataTable();
            $('.dataTables_filter').addClass('pull-right');
            $('[data-toggle="popover"]').popover({
                container: 'body'
            });
        });
    </script>
