
@model OnlineStore.WebUI.Models.OnlineSaleProduct

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" />

<div class="col-md-12 table-bordered">
    @using (Html.BeginForm("AddUpdateProduct", "OrdersList", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row" style="padding-top:10px">
            <div class="form-group col-md-6" tabindex=1>
                <label class="control-label">ProductName</label>
                @Html.EditorFor(model => model.ProductName, "", new { })
                @Html.ValidationMessageFor(model => Model.ProductName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="control-label">PriceIncGST</label>
                @Html.EditorFor(model => model.PriceIncGST, "", new { })
                @Html.ValidationMessageFor(model => Model.PriceIncGST, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-top:10px">
            <div class="form-group col-md-6" tabindex=1>
                <label class="control-label">ItemType</label>
                @Html.DropDownListFor(model => model.ItemType_ID, Model.ItemTypes, "ItemType", new { @class = "form-control ItemType", @id = "ddlItemType" })
                @Html.ValidationMessageFor(model => Model.ItemType_ID, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="control-label">Brand</label>
                @Html.DropDownListFor(model => model.Brand_ID, Model.Makes, "Brands", new { @class = "form-control ItemType", @id = "ddlBrand" })
                @Html.ValidationMessageFor(model => Model.Brand_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-top:10px">
            <div class="form-group col-md-6" tabindex=1>
                <label class="control-label">Model</label>
                @Html.DropDownListFor(model => model.Model_ID, Model.Makes, "Brands", new { @class = "form-control ItemType", @id = "ddlBrand" })
                @Html.ValidationMessageFor(model => Model.Model_ID, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                <label class="control-label">Quantity</label>
                @Html.EditorFor(model => model.QtyAvailable, "", new { })
                @Html.ValidationMessageFor(model => Model.QtyAvailable, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row" style="padding-top:10px">
            <div class="form-group col-md-6" tabindex=1>
                <label>Is Product Active?</label>
                @Html.CheckBoxFor(model => model.IsProductActive, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsProductActive, null, new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6" tabindex=1>
                <label>Is Main Page Product?</label>
                @Html.CheckBoxFor(model => model.IsMainPageProduct, new { htmlAttributes = new { @class = "form-control" }, @onchange = "HideShowModal(this);" })
                @Html.ValidationMessageFor(model => model.IsMainPageProduct, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-12">
            <label class="control-label">Description</label>
            @Html.EditorFor(model => model.Description, "", new { @style = "width:20px;" })
            @Html.ValidationMessageFor(model => Model.Description, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-12">
            <br />
            @Html.TextBoxFor(model => model.files, new { type = "file", accept = ".png, .jpg, .jpeg" })
        </div>

        <div class="col-sm-6">
            <br />
            <button type="submit" class="btn btn-primary">CREATE NEW PRODUCT</button>
        </div>
    }
</div>

<style>
    .form-group {
        margin-bottom: 2px;
        padding-right: 0;
        padding-left: 0;
        margin: 0px;
        font-size: 12px;
        border-radius: 9px;
        padding-bottom: 5px;
        margin-top: 2px;
    }

    .jconfirm .jconfirm-box div.jconfirm-content-pane .jconfirm-content {
        overflow: hidden;
    }

    .col-md-6 {
        position: relative;
        min-height: 1px;
        padding-right: 0px;
        padding-left: 0px;
    }

    .row.no-pad > [class*='col-'] {
        padding-right: 0;
        padding-left: 0;
    }

    .btn-warning {
        background-color: #428bca;
        font-size: 14px;
        border-color: #428bca;
    }

    .form-control {
        margin-bottom: 2px;
        padding-right: 0;
        padding-left: 0;
        font-size: 12px;
        border-radius: 9px;
        padding-bottom: 5px;
        margin-top: 2px;
    }

    .panel-footer {
        padding: 3px 30px;
        background-color: #f5f5f5;
        border-top: 1px solid #dddddd;
        border-bottom-right-radius: 3px;
        border-bottom-left-radius: 3px;
    }

    .form-group.required .control-label:after {
        content: "*";
        color: red;
        padding-bottom: 15px;
    }
</style>
