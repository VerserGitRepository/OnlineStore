@model OnlineStore.WebUI.Models.OnlineSaleOrdersListModel
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="table table-responsive" style="padding:20px;">
    <div class="card">
        <div class="card-header">
            Ship order
        </div>
        @using (Html.BeginForm("SendShipment", "OrdersList", FormMethod.Post))
        {
            <div class="card-body">

                @foreach (var item in Model.OnlineSalePurchasedProducts)
                {
                    <div class="col-md-12" style="padding-top:10px">
                        <div class="form-group" tabindex=1>
                            <label class="control-label">@item.ProductName</label>
                        </div>

                        <div class="form-group" tabindex=1>
                            @Html.EditorFor(id => item.SSN)
                            @Html.ValidationMessageFor(id => item.SSN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                }
                <div class="col-md-12" style="padding-bottom:10px; padding-top:10px">
                    <input type="submit" value="Process" />
                </div>

            </div>
        }
    </div>
</div>