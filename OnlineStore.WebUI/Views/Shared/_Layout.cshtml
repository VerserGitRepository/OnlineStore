<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        @*<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />*@
        
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

        <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VERSER ONLINE STORE</title>
</head>
<body>
    @{
        if (Session["CustomerName"] == null)
        {
            Session["CustomerName"] = "Online Store";
        }
    }
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <div class="col-lg-3" style="vertical-align: central;">
        <div class="row" style="vertical-align: central;padding-left: 20px;">
            <img src="~/Images/VerserLogo.png" style="width:110px;height:60px;border-color:gray;background-color:black; border-width:thin" />
        </div>
    </div>
    <div id="flipkart-navbar" style="background-color:black">
        <div class="container">

            <div class="flipkart-navbar-search smallsearch col-sm-8 col-xs-11">

                <input class="flipkart-navbar-input col-xs-11" placeholder="Search for Products, Brands and more" name="">
                <button class="flipkart-navbar-button col-xs-1">
                    <svg width="15px" height="15px">
                        <path d="M11.618 9.897l4.224 4.212c.092.09.1.23.02.312l-1.464 1.46c-.08.08-.222.072-.314-.02L9.868 11.66M6.486 10.9c-2.42 0-4.38-1.955-4.38-4.367 0-2.413 1.96-4.37 4.38-4.37s4.38 1.957 4.38 4.37c0 2.412-1.96 4.368-4.38 4.368m0-10.834C2.904.066 0 2.96 0 6.533 0 10.105 2.904 13 6.486 13s6.487-2.895 6.487-6.467c0-3.572-2.905-6.467-6.487-6.467 "></path>
                    </svg>
                </button>

            </div>

        </div>
    </div>
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:orange;height:20px;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation" data-target="#navbarTogglerDemo03">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="nav navbar-nav" style="padding-top:20px; font-size:12px">
                <li>@Html.ActionLink("ONLINESTORE", "Index", "OnlineSale")</li>
                <li>@Html.ActionLink("MOBILE", "Mobile", "OnlineSale")</li>
                <li>@Html.ActionLink("LAPTOPS", "Laptop", "OnlineSale")</li>
                <li>@Html.ActionLink("MONITOR", "Monitor", "OnlineSale")</li>
                <li>@Html.ActionLink("DESKTOP PC", "DesktopPC", "OnlineSale")</li>
                <li>@Html.ActionLink("IPAD", "IPad", "OnlineSale")</li>
                <li>@Html.ActionLink("ACCESSORIES", "Mobile", "OnlineSale")</li>
                <li>@Html.ActionLink("PRINTER", "Printer", "OnlineSale")</li>
                <li>@Html.ActionLink("SERVERS", "Server", "OnlineSale")</li>
                <li>@Html.ActionLink("NETWORK GEARS", "NetworkGear", "OnlineSale")</li>
                <li>@Html.ActionLink("TV'S", "TV", "OnlineSale")</li>
                <li id="contactUs">@Html.ActionLink("CONTACT US", "ContactUs", "Home")</li>
                <li id="faq">@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                @if (@Session["Username"] != null)
                {
                    <li>@Html.ActionLink("ORDERSLIST", "Index", "OrdersList")</li>
                    <li>@Html.ActionLink("LOGOUT", "Login", "Login")</li>
                }
                else
                {
                    <li>@Html.ActionLink("LOGIN", "Login", "Login")</li>
                }
            </ul>
            <div class="navbar-right" style="vertical-align:bottom">
                @Html.Action("Summary", "ShoppingCart")
            </div>
            </div>          
           
        </div>
    </nav>
 

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="padding:35px;margin:35px">
        <div class="modal-dialog"@*style="padding:15px;margin:15px"*@>
            @*<div class="modal-content">*@
                @*<div class="modal-header">
                  
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>*@
                <div class="modal-content"style="padding:35px;margin:35px">
                    Quote Terms & Conditions IMPORTANT - When placing orders please include full End User information - Company Name,
                    Street Address, Phone Number, Contact Name and Email Address.<br>
