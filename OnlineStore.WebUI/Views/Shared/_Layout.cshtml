<body>
    @{
        if (Session["CustomerName"] == null)
        {
            Session["CustomerName"] = "Online Store";
        }
    }
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <div class="col-lg-3 pull-left" style="vertical-align: central;">
        <div class="row" style="vertical-align: central;padding-left: 20px;">
            <img src="~/Images/VerserLogo.png" style="width:120px;height:70px;border-color:gray;background-color:black; border-width:thin" />
        </div>
    </div>

    <div id="flipkart-navbar" style="background-color:black">
        <div class="container" style="background-color:black">
            <div class="row row2">
                <div class="flipkart-navbar-search smallsearch col-sm-8 col-xs-11">
                    <div class="row">
                        <input class="flipkart-navbar-input col-xs-11" type="" placeholder="Search for Products, Brands and more" name="">
                        <button class="flipkart-navbar-button col-xs-1">
                            <svg width="15px" height="15px">
                                <path d="M11.618 9.897l4.224 4.212c.092.09.1.23.02.312l-1.464 1.46c-.08.08-.222.072-.314-.02L9.868 11.66M6.486 10.9c-2.42 0-4.38-1.955-4.38-4.367 0-2.413 1.96-4.37 4.38-4.37s4.38 1.957 4.38 4.37c0 2.412-1.96 4.368-4.38 4.368m0-10.834C2.904.066 0 2.96 0 6.533 0 10.105 2.904 13 6.486 13s6.487-2.895 6.487-6.467c0-3.572-2.905-6.467-6.487-6.467 "></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="wrapper">
        <div class="navbar navbar-default">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "OnlineSale", new { customerCode = Session["CustomerCode"] })">@Session["CustomerName"]</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="font-size:16px;background-color:orange;color:white">
                <ul class="nav navbar-nav" style="color:white">
                    <li>@Html.ActionLink("MOBILE", "Mobile", "OnlineSale")</li>
                    <li>@Html.ActionLink("LAPTOPS", "Laptop", "OnlineSale")</li>
                    <li>@Html.ActionLink("MONITOR", "Monitor", "OnlineSale")</li>
                    <li>@Html.ActionLink("DESKTOP PC", "DesktopPC", "OnlineSale")</li>
                    <li>@Html.ActionLink("IPAD", "IPad", "OnlineSale")</li>
                    <li>@Html.ActionLink("ACCESSORIES", "Mobile", "OnlineSale")</li>
                    <li>@Html.ActionLink("PRINTER", "Mobile", "OnlineSale")</li>
                    <li>@Html.ActionLink("SERVERS", "Mobile", "OnlineSale")</li>
                    <li>@Html.ActionLink("NETWORK GEARS", "Mobile", "OnlineSale")</li>
                    <li>@Html.ActionLink("TV'S", "Mobile", "OnlineSale")</li>
                    <li id="contactUs">@Html.ActionLink("CONTACT US", "ContactUs", "Home")</li>
                    <li id="faq">@Html.ActionLink("FAQ", "FAQ", "Home")</li>

                    @if (@Session["Username"] != null)
                    {
                        <li>@Html.ActionLink("ORDERSLIST", "Index", "OrdersList")</li>
                        <li>@Html.ActionLink("LOGOUT", "Login", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("LOGIN", "Login", "Login")</li>
                    }
                </ul>
                <div>
                    @Html.Action("Summary", "Cart")
                </div>
            </div>
        </div>

        @*<div style="margin-top: 10px; margin-left: 10px;">
            @RenderBody()
        </div>
        <div class="push"></div>*@
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -VERSER TECHNOLOY LIFECYCLES  <a href="mailto:Support@verser.com.au?Subject=VerserMintServiceOrders%20Request" style="font-size:small"> Contact Support</a></p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/CustomRequiredIf.js")
    @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
