    .search-bar {
        position: fixed;
        top: 0px;
        width: 100%;
        z-index: 10;
    }

    #txtSearchProduct {
        width: 100%;
    }

    #searchProduct {
        background-color: lightgray;
        border: none;
    }

        #searchProduct:hover {
            background-color: orange;
            border: none;
        }

    .navbar-collapse {
        background-color: orange;
    }

        li.nav-item a {
            color: white !important;
            font-size:16px;
            padding:15px 8px;
        }

            li.nav-item a:hover {
                background-color: darkorange;
                transition: .35s;
            }

    .no-border {
        border-right: none;
    }

    #login-btn:hover {
        background-color: darkorange;
    }

    .modal-backdrop {
        background: none;
    }

    .btn-default {
        color: white;
        background-color: black;
        border:1px solid;
        border-color: transparent;
        padding:10px 10px;
        margin:12px 20px 0 0;
    }

        .btn-default:hover {
            background-color:white !important;
            color:black !important;
        }

    .flipkart-navbar-input {
        padding: 11px 10px;
        border-radius: 12px 0 0 12px;
        border: 0 none;
        outline: 0 none;
        font-size: 15px;
    }

    .modal-dialog {
        max-width: 1000px;
    }

    a {
        color: white;
        cursor: pointer;
    }

        a:hover {
            text-decoration: none;
        }

    .nav > li > a:focus, .nav > li > a:hover {
        text-decoration: none;
        background-color: transparent !important;
    }

    .flipkart-navbar-button {
        border: 1px solid Orange;
        border-radius: 0 12px 12px 0;
        color: #565656;
        padding: 10px 0;
        height: 43px;
        cursor: pointer;
    }

    .smallsearch {
        margin-left: 10px;
        margin-top: 10px;
    }

    a.cartImage {
        background: url(../Images/cart.png) no-repeat top right;
        display: block;
