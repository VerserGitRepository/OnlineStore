<script>
$('.carousel').carousel({
    interval: 2000
});

function ShowProductDetailPage(ProductId) {
    var objSpinner = null;

    $.ajax({
        type: "GET",
        data: { "ProductId": ProductId },
        url: '@Url.Action("ProductDetail", "OnlineSale")',
        beforeSend: function () {
            objSpinner = $.alert({
                boxWidth: '50px',
                useBootstrap: false,
                title: '',
                content: $("#spinner").html(),
                buttons: {
                    yes: { isHidden: true }
                }
            })
        },
        success: function (data) {
            $("#spinner").hide();
            objSpinner.close();
            $.confirm({
                boxWidth: '90%',
                useBootstrap: false,
                title: '',
                content: data,
                closeIcon: true,

                buttons: {
                    yes: { isHidden: true }
                },
            });
        }
    });
}
</script>
