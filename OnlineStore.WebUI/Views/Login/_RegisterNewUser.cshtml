@model OnlineStore.WebUI.Models.LoginModel


    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @using (Html.BeginForm("RegisterNewUser", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h4 style="color:orange;font-weight:600;align-self:center">Register New User</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-3"> FirstName</div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-3">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>         
            <div class="form-group">
                <div class="col-md-3"> UserName</div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "UserID" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">Password</div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @Type = "Password", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">ConfirmPassword</div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @Type = "Password", placeholder = "Confirm Password" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    Email
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>               
                <div class="col-md-6">
                    Salutation
                    @Html.EditorFor(model => model.Salutation, new { htmlAttributes = new { @class = "form-control", @Type = "Salutation", placeholder = "Salutation" } })
                    @Html.ValidationMessageFor(model => model.Salutation, "", new { @class = "text-danger" })
                </div>
            </div>          
            <div class="form-group">               
                <div class="col-md-6">
                    Addressline1
                    @Html.EditorFor(model => model.Addressline1, new { htmlAttributes = new { @class = "form-control", @Type = "Salutation", placeholder = "Addressline1" } })
                    @Html.ValidationMessageFor(model => model.Addressline1, "", new { @class = "text-danger" })
                </div>   
                <div class="col-md-6">
                    Addressline2
                    @Html.EditorFor(model => model.Addressline2, new { htmlAttributes = new { @class = "form-control", @Type = "Salutation", placeholder = "Addressline2" } })
                    @Html.ValidationMessageFor(model => model.Addressline2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">               
                <div class="col-md-6">
                    Suburb
                    @Html.EditorFor(model => model.Suburb, new { htmlAttributes = new { @class = "form-control", @Type = "Suburb", placeholder = "Suburb" } })
                    @Html.ValidationMessageFor(model => model.Suburb, "", new { @class = "text-danger" })
                </div>           
                <div class="col-md-6">
                    State
                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", @Type = "Salutation", placeholder = "State" } })
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">               
                <div class="col-md-6">
                    PostCode
                    @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "form-control", @Type = "PostCode", placeholder = "PostCode" } })
                    @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                </div>          
                <div class="col-md-6">
                    Country
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", @Type = "Salutation", placeholder = "Country" } })
                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
               
                <div class="col-md-6">
                    ContactNo
                    @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control", @Type = "ContactNo", placeholder = "ContactNo" } })
                    @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                </div>           
                <div class="col-md-6"><br />
                    <input type="submit" value="Register New User" class="btn btn-warning btn-md" />
                </div>
            </div>
        }
    </div>


